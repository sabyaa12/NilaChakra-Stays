
<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-8 offset-2">
 <h3>Edit your Listing</h3>
  
      <form method="POST" action="/listings/<%= listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data" > 
      <div class="md-3">
     <label for="Title" class="form-label">Title</label>
      <input name="listing[title]" class="form-control" value="<%= listing.title %>" type="text" class="form-control" required>
    <div class="valid-feedback" > Title looks good </div>

    </div>
       <div class="md-3">
     <label for="Description" class="form-label">Description</label>
        <textarea name="listing[description]" class="form-control" type="number" required ><%= listing.description %>  </textarea>
                <div class="invalid-feedback" > please enter a short description  </div>

    </div>

         <div class="md-3"> 
     <label for="image" class="form-label">Original Listing Image : </label> </br>
           <img src="<%= originalImageUrl %> " class="img-fluid " style="max-height: 300px;"  > </div> 

         <div class="md-3">
     <label for="image" class="form-label">upoad new image</label>
       <input name="listing[image]"  type="file" class="form-control" >
    </div>
<div class="row">
      <div class="md-3 col-md-4">
     <label for="price" class="form-label">price</label>
        <input name="listing[price]" value="<%= listing.price %>" class="form-control" required>
      <div class="invalid-feedback" > please enter a valid price  </div>

    </div>
    <div class="md-3 col-md-8">
    <label for="category" class="form-label">Category</label>
    <select name="listing[category]" class="form-select" required>
        <option value="" disabled>Select a category</option>
        <option value="Trending" <%= listing.category === 'Trending' ? 'selected' : '' %>>Trending</option>
        <option value="Rooms" <%= listing.category === 'Rooms' ? 'selected' : '' %>>Rooms</option>
        <option value="Iconic Cities" <%= listing.category === 'Iconic Cities' ? 'selected' : '' %>>Iconic Cities</option>
        <option value="Mountains" <%= listing.category === 'Mountains' ? 'selected' : '' %>>Mountains</option>
        <option value="castles" <%= listing.category === 'castles' ? 'selected' : '' %>>Castles</option>
        <option value="Amazing Pool" <%= listing.category === 'Amazing Pool' ? 'selected' : '' %>>Amazing Pool</option>
        <option value="Camp" <%= listing.category === 'Camp' ? 'selected' : '' %>>Camp</option>
        <option value="Farm" <%= listing.category === 'Farm' ? 'selected' : '' %>>Farm</option>
        <option value="Artic" <%= listing.category === 'Artic' ? 'selected' : '' %>>Artic</option>
    </select>
    <div class="invalid-feedback">Please select a category.</div>
</div>
</div>
         <div class="md-3 ">
     <label for="country" class="form-label">country</label>
        <input name="listing[country]" value="<%= listing.country %>" type="text" class="form-control" required>
            <div class="invalid-feedback" > please enter a valid country name </div>
    </div>

       
         <div class="md-3">
     <label for="location" class="form-label">location</label>
       <input name="listing[location]" value="<%= listing.location %>" type="text" class="form-control" required>
            <div class="invalid-feedback" > please enter a valid location name  </div>
  </div>
      
        <button class="btn btn-dark edit-btn mt-3"> Edit </button> <br /><br />
    </form>

    </div>
</div>
  